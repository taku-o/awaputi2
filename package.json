    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.20",
    "lerna": "^8.2.3",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vite-plugin-dts": "^4.5.4"
