{
  "name": "bubble-pop-web-game",
  "version": "1.0.0",
  "description": "A web-based bubble popping game with various bubble types and special effects",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install-all": "npm install",
    "clean": "lerna clean",
    "dev": "lerna run dev --parallel",
    "build": "lerna run build",
    "lint": "lerna run lint",
    "format": "lerna run format",
    "type-check": "lerna run type-check",
    "storybook": "npm run storybook --workspace=@bubblepop/storybook-docs",
    "build-storybook": "npm run build-storybook --workspace=@bubblepop/storybook-docs",
    "pretest:e2e": "npm run build --workspace=@bubblepop/ui-library",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:storybook": "npm run test:storybook --workspace=@bubblepop/storybook-docs",
    "test:storybook:ui": "npm run test:storybook:ui --workspace=@bubblepop/storybook-docs",
    "test:storybook:addons": "npm run test:storybook:addons --workspace=@bubblepop/storybook-docs",
    "test:storybook:theme": "npm run test:storybook:theme --workspace=@bubblepop/storybook-docs",
    "test:storybook:theme:ui": "npm run test:storybook:theme:ui --workspace=@bubblepop/storybook-docs",
    "test:storybook:theme:headed": "npm run test:storybook:theme:headed --workspace=@bubblepop/storybook-docs",
    "test:storybook:all": "npm run test:storybook:all --workspace=@bubblepop/storybook-docs",
    "ci:install": "npm ci",
    "ci:build": "npm run build",
    "ci:lint": "npm run lint",
    "ci:type-check": "npm run type-check",
    "ci:test:unit": "lerna run test",
    "ci:test:e2e": "npm run pretest:e2e && npm run test:e2e",
    "ci:test:storybook": "npm run test:storybook:all",
    "ci:test:all": "npm run ci:test:unit && npm run ci:test:e2e && npm run ci:test:storybook"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.20",
    "lerna": "^8.2.3",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vite-plugin-dts": "^4.5.4"
  },
  "keywords": [
    "game",
    "bubble",
    "canvas",
    "web",
    "javascript"
  ],
  "author": "BubblePop Team",
  "license": "MIT"
}
